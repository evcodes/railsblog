<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>


    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <%= render 'layouts/navigation' %>
    <%= yield %>
   
  </body>

  <% flash.each do |name, msg| %>
    <ul>
     <p>Status: <%= msg %>!</p>
    </ul>
<% end %>
</html>
